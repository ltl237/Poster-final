<div class="basicforpadding" id="newuser">
  <h1>New User</h1>
  <%= form_for @user do |f| %>
    <ul>
      <li>
        <%= f.label :full_name %>
        <%= f.text_field :full_name %>
      </li>
      <li>
        <%= f.label :bio %>
        <%= f.text_field :bio, :size=>"50" %>
      </li>
      <li>
        <%= f.label :username %>
        <%= f.text_field :username %>
      </li>
      <li>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </li>
    </ul>
    <%= f.submit %>
  <% end %>
</div>